extends ../layouts/base

block link
	-var selected = 'Home';
block content
	.container
		.row
			each post in posts
				.col-sm-6
					mixin post(post)

		.pagination
			- for (var i = 0; i < pages.length; i++) {
				- var page = pages[i];
				- if (i === currentIndex + 1) {
					a.older(href="#{data.baseUrl}#{page.url}") <i class="fa fa-chevron-left"></i> Older
				- } else if (i === currentIndex - 1) {
					a.newer(href="#{data.baseUrl}#{page.url}") Newer <i class="fa fa-chevron-right"></i>
				- }
			- }