extends ../layouts/base

block var
	-selected = 'Home';
block content
	.container
		.row
			each post in posts
				.col-sm-6
					.post-head.group
						a(href="#{data.baseUrl + post.url}")
							h1.post-title #{post.title}
						span.post-date #{post.date.getUTCDate()}.#{post.date.getUTCMonth() + 1}.#{post.date.getUTCFullYear()}
					.post-body.markdown !{post.content}

		.pagination
			- for (var i = 0; i < pages.length; i++) {
				- var page = pages[i];
				- if (i === currentIndex + 1) {
					a.older(href="#{data.baseUrl + page.url}") <i class="fa fa-chevron-left"></i> Older
				- } else if (i === currentIndex - 1) {
					a.newer(href="#{data.baseUrl + page.url}") Newer <i class="fa fa-chevron-right"></i>
				- }
			- }