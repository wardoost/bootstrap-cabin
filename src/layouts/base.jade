//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="#{data.baseUrl}#{post.url}")
      h1.post-title= post.title
    span.post-date!= [post.date.getUTCFullYear(), post.date.getUTCMonth() + 1, post.date.getUTCDate()].join(' &#183; ')

mixin post(post)
  mixin postHead(post)
  .post-body.markdown!= post.content

mixin menulink(menuitem)
  if menuitem.link_external
    a(href="#{menuitem.link}", title=menuitem.name, target="_blank")
      i.fa.fa-lg.fa-fw(class="#{menuitem.icon}")
      &nbsp;
      = menuitem.name
  else
    a(href="#{data.baseUrl}#{menuitem.link}", title=menuitem.name)
      i.fa.fa-lg.fa-fw(class="#{menuitem.icon}")
      &nbsp;
      = menuitem.name

mixin menu(menu)
    each item, i in menu
      if selected === item.name
        li.active
          mixin menulink(item)
      else if "dropdown" === item.link
                li.dropdown
                  a.dropdown-toggle(href="#" data-toggle="dropdown")
                    i.fa.fa-cubes.fa-lg.fa-fw
                    &nbsp;
                    = item.name
                    b.caret
                  ul.dropdown-menu
                    each subitem, j in item.items
                      if selected === subitem.name
                        li.active
                          mixin menulink(subitem)
                      else if "divider" === subitem.type
                        li.divider
                      else
                        li
                          mixin menulink(subitem)
      else
        li
          mixin menulink(item)

block link
  -var selected = ''; //default

